{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "sohoxi-angular"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        { "glob": "**/*", "input": "../node_modules/@infor/sohoxi/dist/css", "output": "./assets/sohoxi/css" },
        "./app/demodata"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.js",
        "../node_modules/@infor/sohoxi/dist/js/sohoxi.js",
        "../node_modules/@infor/sohoxi/dist/js/cultures/en-US.js",
        "../node_modules/@infor/sohoxi/dist/js/d3.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": ["**/node_modules/**", "**/polyfills.ts"]
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": ["**/node_modules/**", "**/polyfills.ts"]
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": ["**/node_modules/**", "**/polyfills.ts"]
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
