{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "../../out-tsc/spec",
    "types": [
      "jasmine",
      "jquery",
      "node",
      "ids-enterprise-typings"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/test.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
